pre
html
	head
		title QuikShop
		link(rel='stylesheet', href='style.css')
		script(src='scripts.js')
	body(onload = "openTab(event, 'blockchain')")
		div(class='tab')
			button(class='tablinks' onclick="openTab(event, 'welcome')") Welcome
			button(class='tablinks' onclick="openTab(event, 'blockchain')") BlockChain
			button(class='tablinks' onclick="openTab(event, 'contact')") Contact us

		div(id='welcome' class='tabcontent')
			h2 Welcome to Quikshop!

		div(id='blockchain' class='tabcontent')
			h2 Live View of Blockchain
			div(id='datatable')
				table
					tr
						for block in blockNum
							th='Block ' + block
					tr
						for nonceVal in nonce
							td='Nonce: ' + nonceVal
					tr(class='data')
						for dataVal in data
							td= 'Data: ' + dataVal
					tr
						for pHashVal in prevHash
							td='Previous Hash: ' + pHashVal
					tr
						for hashVal in currHash
							td='Current Hash: ' + hashVal



		div(id='contact' class='tabcontent')
			h2 Contact Information
			p Align center?
